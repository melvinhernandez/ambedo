<div class="container">
  <% if (!user) { %>
    <h2>You should signup to my website!</h2>
    <a href="/auth/spotify" class="waves-effect waves-light btn-large"><i class="material-icons left">face</i>Login</a>
  <% } else { %>
    <h3 class="center-align grey-text ">Welcome, <%= user.spotify.username %> :)</h3>
    <h4 class="center-align teal-text text-lighten-2">SHARE A NEW PLAYLIST</h4>
    <div class="row">
      <form class="col s6 offset-s3 center-align" action="/api/post/new" method="post">
        <div class="row">
          <div class="input-field col s12">
            <label for="title">Title</label>
            <input name="title" type="text" class="validate">
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <label for="content">Caption</label>
            <input name="content" type="text" class="validate">
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <label for="playlistUri">PlaylistURI</label>
            <input name="playlistUri" type="text" class="validate">
          </div>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Share
          <i class="material-icons right">send</i>
        </button>
      </form>
    </div>

  <% } %>
</div>
